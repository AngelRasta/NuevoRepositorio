<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <%- include('partials/Styles') %>

    <!-- Importar Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <!-- Incluir el menú de navegación -->
    <%- include('partials/navigation') %>

    <!-- Video de fondo -->
    <video id="fondo-video" autoplay muted loop>
        <source src="/videos/fondo.mp4" type="video/mp4">
        Tu navegador no soporta el video.
    </video>

    <!-- Contenido principal -->
    <main class="container mt-5">
        <section>
            <h2 class="text-center mb-4">Catálogo de Productos</h2>
            <div class="row">
                <!-- Producto 1 -->
                <div class="col-md-4">
                    <div class="producto">
                        <img src="/imagenes/1.jfif" alt="Producto 1">
                        <h4>Modelo: Air Max</h4>
                        <p>Marca: Nike</p>
                        <p>Precio: $150 USD</p>
                        <select class="form-select mb-2" aria-label="Seleccionar talla">
                            <option selected>Talla</option>
                            <option value="1">6</option>
                            <option value="2">7</option>
                            <option value="3">8</option>
                            <option value="4">9</option>
                        </select>
                        <div>
                            <button class="btn btn-3d">Agregar al carrito</button>
                            <button class="btn btn-3d btn-success">Comprar</button>
                        </div>
                    </div>
                </div>

                <!-- Producto 2 -->
                <div class="col-md-4">
                    <div class="producto">
                        <img src="/imagenes/2.jfif" alt="Producto 2">
                        <h4>Modelo: Superstar</h4>
                        <p>Marca: Adidas</p>
                        <p>Precio: $120 USD</p>
                        <select class="form-select mb-2" aria-label="Seleccionar talla">
                            <option selected>Talla</option>
                            <option value="1">6</option>
                            <option value="2">7</option>
                            <option value="3">8</option>
                            <option value="4">9</option>
                        </select>
                        <div>
                            <button class="btn btn-3d">Agregar al carrito</button>
                            <button class="btn btn-3d btn-success">Comprar</button>
                        </div>
                    </div>
                </div>

                <!-- Producto 3 -->
                <div class="col-md-4">
                    <div class="producto">
                        <img src="/imagenes/3.jfif" alt="Producto 3">
                        <h4>Modelo: Chuck Taylor</h4>
                        <p>Marca: Converse</p>
                        <p>Precio: $80 USD</p>
                        <select class="form-select mb-2" aria-label="Seleccionar talla">
                            <option selected>Talla</option>
                            <option value="1">6</option>
                            <option value="2">7</option>
                            <option value="3">8</option>
                            <option value="4">9</option>
                        </select>
                        <div>
                            <button class="btn btn-3d">Agregar al carrito</button>
                            <button class="btn btn-3d btn-success">Comprar</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <%- include('partials/footer') %>

    <!-- Importar Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

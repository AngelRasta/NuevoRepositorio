    <!-- Importar Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        #map {
            width: 100%;
            height: 500px;
            margin: 20px auto;
        }

        .form-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin-top: 30px;
        }

        .form-container form {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            max-width: 400px;
        }

        .form-container form input, 
        .form-container form textarea, 
        .form-container form button {
            width: 100%;
            margin: 10px 0;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .form-container form button {
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }

        .form-container form button:hover {
            background-color: #45a049;
        }

        body {
            background-color: #1a1a1a; /* Fondo oscuro */
            color: #f8f9fa; /* Texto claro */
            text-align: center; /* Centra el contenido del cuerpo */
        }

        h2, h4, p {
            color: #f8f9fa; /* Color de texto blanco para visibilidad */
        }

        /* Animación 3D para botones */
        .btn-3d {
            position: relative;
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            text-transform: uppercase;
            border: none;
            border-radius: 5px;
            box-shadow: 0px 4px #0056b3;
            transition: all 0.2s ease;
        }

        .btn-3d:hover {
            background-color: #0056b3;
            box-shadow: 0px 2px #004085;
        }

        .btn-3d:active {
            transform: translateY(2px);
            box-shadow: 0px 1px #004085;
        }

        /* Estilo de productos */
        .producto {
            text-align: center;
            background-color: #333; /* Fondo de las tarjetas */
            padding: 15px;
            border: 1px solid #444;
            border-radius: 8px;
            margin: 10px auto; /* Centrar las tarjetas */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            max-width: 300px;
        }

        .producto img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }

        .producto h4, .producto p {
            margin: 10px 0;
        }

        /* Botones */
        .btn-success {
            background-color: #28a745;
            border-color: #218838;
        }

        .btn-success:hover {
            background-color: #218838;
        }
    </style>
</head>
